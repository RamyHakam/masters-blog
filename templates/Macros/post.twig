{% macro post(post,account) %}
    <div class="post" style="width: 100%">
        <div class="row">
            <div class="col-md-12">
                <!-- Box Comment -->
                <div class="card card-widget">
                    <div class="card-header">
                        <div class=" col-md-11 user-block">
                            <img alt="User Image" class="img-circle" src={{ post.account.avatar }}>
                            <span class="username"><a href="#">{{ post.account.getFullName }}</a></span>
                            <span class="description">{{ post.createdAt|ago }}</span>
                        </div>
                        <div class=" col-md-1 card-tools d-flex justify-content-end">
                            <button class="btn btn-tool" data-card-widget="remove" type="button">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-12">
                        <p>{{ post.text }}</p>
                            {% if post.photo %}
                                <img class="img-fluid pad" src="{{ post.photo }}" alt="Photo"
                                style="margin-bottom: 1rem; margin-right: 2rem">
                            {% endif %}
                        </div>
                        <div class="col-12">
                        <button class="btn btn-default btn-sm" type="button"><i class="far fa-thumbs-up"></i> Like
                        </button>
                            {% if account.adminRole is defined %}
                        <button class="btn btn-danger btn-sm" type="button"><i class="far fa-trash-alt"></i> Remove
                        </button>
                            {% endif %}
                        <span class="float-right text-muted">{{ post.likes}} likes - {{ post.comments| length}}  comments</span>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer card-comments">
                        {% for comment in post.comments %}
                        <div class="card-comment">
                            <!-- User image -->
                            <img alt="User Image" class="img-circle img-sm" src="{{ comment.account.avatar }}">

                            <div class="comment-text">
                    <span class="username">
                      {{ comment.account.getFullName }}
                      <span class="text-muted float-right">{{ comment.createdAt|ago }}</span>
                    </span><!-- /.username -->
                               {{ comment.commentText }}
                            </div>
                            <!-- /.comment-text -->
                        </div>
                        <!-- /.card-comment -->
                        {% endfor %}
                    </div>
                    <!-- /.card-footer -->
                    <div class="card-footer">
                        <form action="#" method="post">
                            <img alt="Alt Text" class="img-fluid img-circle img-sm" src="{{ account.avatar }}">
                            <!-- .img-push is used to add margin to elements next to floating images -->
                            <div class="img-push">
                                <input class="form-control form-control-sm" placeholder="Press enter to post comment"
                                       type="text">
                            </div>
                        </form>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
        </div>

    </div>
{% endmacro %}