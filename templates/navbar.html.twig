{%  block navbar %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-primary navbar-dark">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <!-- Notifications Dropdown Menu -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-bell"></i>
                    <span class="badge badge-warning navbar-badge">{{ account.notifications|length }}</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-item dropdown-header">{{ account.notifications|length}} Notifications</span>
                    {% for notification in account.notifications|slice(0,3) %}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('profile_page_view',{id:notification.account.id}) }}">
                        <i class="fas fa-envelope mr-2"></i> {{ notification.account.firstName}} starts following you
                    </a>
                    {% endfor %}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item dropdown-footer" href="{{ path('notification_page') }}">See All Notifications</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
{% endblock %}