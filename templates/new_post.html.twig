{% block new_post %}
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Create New Post</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form action="#"  id="new-post" class="dropzone" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- textarea -->
                                <div class="form-group">
                                    <label>Add Post</label>
                                    <textarea class="md-textarea form-control" placeholder="Enter ..." rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="form-group">
                        <div class="row" id="actions">
                            <div class="col-lg-12">
                                <div class="btn-group w-100">
                                    <button class="btn btn-primary col start" type="submit" form="new-post">
                                        <i class="fas fa-upload"></i>
                                        <span>Post Now</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
{% endblock %}