{% block new_post %}
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Create New Post</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    {{ form_start(postForm,{'attr':{'class':'dropzone','id':'new-post','enctype':'multipart/form-data'}}) }}
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- textarea -->
                                <div class="form-group">
                                    <label>Add Post</label>
                                    {{ form_widget(postForm.text,{'attr':{'class':'md-textarea form-control','rows':'3'}}) }}
                                </div>
                            </div>
                        </div>
                    {{ form_rest(postForm) }}
                    {{ form_end(postForm) }}
                    <div class="form-group">
                        <div class="row" id="actions">
                            <div class="col-lg-12">
                                <div class="btn-group w-100">
                                    <button class="btn btn-primary col start" type="submit" form="new-post">
                                        <i class="fas fa-upload"></i>
                                        <span>Post Now</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    {{ encore_entry_link_tags('post') }}
    {{ encore_entry_script_tags('post') }}
{% endblock %}